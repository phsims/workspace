{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "paths":{
      "@spoonacular-api": ["libs/spoonacular-api/src/index.ts"],
      "@workspace/components": ["libs/components/src/index.ts"],
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "../../apps/plan-my-plate/.next/types/**/*.ts",
    "../../dist/apps/plan-my-plate/.next/types/**/*.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts",
     "../../libs/components/src/lib/themes/purple.ts", 
"../../libs/components/src/lib/utils/purify.ts",
"../../setupTests.ts"  ],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
